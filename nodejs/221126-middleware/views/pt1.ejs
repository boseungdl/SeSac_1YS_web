<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <title>Document</title>

  <script>
    function as(){
      const formData = new FormData();
      const id = document.querySelectorAll('input')[0].value
      const file = document.querySelectorAll('input')[5]
      formData.append('id', id)
      formData.append('file', file.files[0])
      axios({
        method: 'POST',
        url: '/upload-pt2',
        data: formData,
        headers: {
          'Content-Type' : 'multipart/form-data',
        },
      }).then(function(res){
        console.log(res.data)
        document.querySelector('img').src = 'uploads/'+res.data;
      }).catch((err) => {console.error(err)})
    }
  </script>
</head>
<body>
  <form action="upload-pt" method="post" enctype="multipart/form-data">
    <fieldset>
      아이디 : <input type="text" name="id"><br>
      비밀번호 : <input type="text" name="pw"><br>
      이름 : <input type="text" name="name"><br>
      나이 : <input type="text" name="age"><br>
    </fieldset>
    <input type="file" name="filept">
    <button>리셋</button>
    <button>회원가입</button>
  </form>
  <input type="file" name="filept2">
  <button onclick="as()">동적</button>
  <img src="" alt="">
</body>
</html>