<body>
  
  <form>
    id: <input type="hidden" name="hidden" value="<%=data.id%>">
    id: <input type="text" name="id" value="<%=data.id%>">
    pw: <input type="text" name="pw" value="<%=data.pw%>">
    name: <input type="text" name="name" value="<%=data.name%>">
    <button type="button" onclick="update()">edit</button>
