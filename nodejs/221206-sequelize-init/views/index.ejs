  <script>
    function update(){
      const form = document.querySelector('form')
      axios({
        method: 'patch',
        url: '/user/update',
        data: {
          hidden: form.hidden.value,
          id: form.id.value,
          pw: form.pw.value,
        }
      })
      .then((result) => {
        console.log(result)
      })
    }
  </script>
